{% extends 'layout.html.twig' %}

{% block content %}
	<div class="container my-5 bg-white shadow p-3 rounded">
		<table class="table table-dark table-striped">
			<caption>Category Information</caption>
			<thead>
				<tr>
					<th scope="col">ID</th>
					<th scope="col">Category Name</th>
					<th scope="col">Category Description</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<th scope="row">{{id}}</th>
					<td>{{name}}</td>
					<td>{{description}}</td>
				</tr>
			</tbody>
		</table>
	</div>
{% endblock %}
